<div class="col-lg-9">
  <div class="panel">

    <div class="panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><center>Lista de cores</center></h3>
      </div>
    </div>

    <div class="panel-body">
      <table class="table table-striped table-hover ">

        <thead>
          <tr>
            <th>Descrição</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @colors.each do |color| %>
            <tr>
              <td>
                <span class="color-description" style="background-color: <%= color.description %>"></span>
                <%= color.description %>
              </td>
              <td width="100" align="center">
                <%= link_to t('buttons.edit'), edit_color_path(color) %>
              </td>
              <td width="100" align="center">
                <%= link_to t('buttons.destroy'), color, method: :delete, data: { confirm: t('messages.confirm') } %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>

      <center><%= paginate @colors %></center>

      <%= link_to t('buttons.new'), new_color_path, class: "btn btn-primary" %>

    </div>
  </div>
</div>

