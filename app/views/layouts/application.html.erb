<!DOCTYPE html>
<html>
<head>
  <title>BOPE</title>
  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag 'bootstrap' %>
  <%= stylesheet_link_tag 'usebootstrap' %>

  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'usebootstrap' %>
  <%#= javascript_include_tag 'zingchart.min' %>

  <!-- Fonts -->
  <%#= google_webfonts_link_tag "Droid Sans" => [400,700] %>

  <%#= javascript_include_tag 'alert' %>
  <!-- <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/cyborg/bootstrap.min.css" rel="stylesheet" integrity="sha384-D9XILkoivXN+bcvB2kSOowkIvIcBbNdoDQvfBNsxYAIieZbx8/SI4NeUvrRGCpDi" crossorigin="anonymous" media="screen"> -->

  <%= csrf_meta_tags %>

</head>
<body>

  <div class="container">

    <%= render partial: 'layouts/shared_application/header' %>

    <br/>
    <div class="col-lg-12">

      <%= render partial: 'layouts/shared_application/aside_bar' %>

      <%= yield %>

    </div>

  </div>

  <script>
      $.notify("<%= notice %>", "success");
  </script>

  <% if params[:controller].include?("/") %>
    <% if params[:controller].split("/").first.include?("reports") %>
      <script src="https://cdn.zingchart.com/zingchart.min.js"></script>
    <% end %>
  <% elsif params[:controller].include?("reports") %>
    <script src="https://cdn.zingchart.com/zingchart.min.js"></script>
  <% end %>

</body>
</html>
