<div class="col-lg-3">
  <div class="panel panel-default">
    <div class="panel-body">
      <ul class="nav nav-pills nav-stacked">

        <li class=<%= aside_bar_active('home') %>>
          <%= link_to t('buttons.home'), root_path, class: 'aside' %>
        </li>

        <% if current_user_total? %>
          <li class=<%= aside_bar_active('user_profile') %>>
            <%= link_to "Usuários", user_profile_index_path, class: 'aside' %>
          </li>
        <% end %>

        <li class=<%= aside_bar_active(params[:controller] == 'team_users' ? 'team_users' : 'teams') %>>
          <%= link_to "Equipes", teams_path, class: 'aside' %>
        </li>

        <% if ['projects', 'sprints', 'activities', 'progresses',
               'macro_activities', 'weeks'].include? params[:controller] %>
          <% p_path = params[:controller] %>
        <% else %>
          <% p_path = 'projects' %>
        <% end %>

        <li class=<%= aside_bar_active("#{p_path}") %>>
          <%= link_to projects_path, class: 'aside' do %>
            Projetos
          <% end %>
        </li>

        <% if current_user_total? %>
          <hr style="border-top-color: dimgray">
        <% end %>

        <% if can? :manage, Label %>
          <li class=<%= aside_bar_active('labels') %>>
            <%= link_to "Rótulos", labels_path, class: 'aside' %>
          </li>
        <% end %>

        <% if can? :manage, Color %>
          <li class=<%= aside_bar_active('colors') %>>
            <%= link_to "Cores", colors_path, class: 'aside' %>
          </li>
        <% end %>

        <% if can? :manage, Status %>
          <li class=<%= aside_bar_active('statuses') %>>
            <%= link_to "Estados", statuses_path, class: 'aside' %>
          </li>
        <% end %>

        <% if current_user_total? %>
          <hr style="border-top-color: dimgray">

          <% if ['reports', 'reports/weeks_reports', 'reports/sprints_reports'].include? params[:controller] %>
            <% r_path = params[:controller] %>
          <% end %>

          <li class=<%= aside_bar_active("#{r_path}") %>>
            <%= link_to "Relatórios", reports_path, class: 'aside' %>
          </li>
        <% end %>

      </ul>
    </div>
  </div>
</div>