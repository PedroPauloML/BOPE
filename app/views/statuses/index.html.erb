<div class="col-lg-9">
  <div class="panel">

    <div class="panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><center>Lista de estados</center></h3>
      </div>
    </div>

    <div class="panel-body">
      <table class="table table-striped table-hover ">

        <thead>
          <tr>
            <th>Descrição</th>
            <th>Cor</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @statuses.each do |status| %>
            <tr>
              <td>
                <%= status.description %>
              </td>
              <td>
                <% if status.color.blank? %>
                  -
                <% else %>
                  <span class="color-description" style="background-color: <%= status.color.description %>"></span>
                  <%= status.color.description %>
                <% end %>
              </td>
              <td width="100" align="center">
                <%= link_to t('buttons.edit'), edit_status_path(status) %>
              </td>
              <td width="100" align="center">
                <%= link_to t('buttons.destroy'), status, method: :delete, data: { confirm: t('messages.confirm') } %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>

      <center><%= paginate @statuses %></center>

      <%= link_to t('buttons.new'), new_status_path, class: "btn btn-default" %>

    </div>
  </div>
</div>

