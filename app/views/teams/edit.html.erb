<div class="col-lg-9">
  <div class="panel">

    <div class="panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><center>Editar equipe</center></h3>
      </div>
    </div>

    <div class="panel-body">

      <!-- <form class="form-horizontal"> -->
      <%= form_for(@team, html: {class: 'form-horizontal'}) do |f| %>

        <% if @team.errors.any? %>
          <div id="error_explanation">
            <div class="alert alert-dismissible alert-danger">
              <p><h5> <%= "Existe(m) #{pluralize(@team.errors.count, 'erro(s)')} no formulário:" %></h5></p>
              <ul>
                <% @team.errors.full_messages.each do |message| %>
                    <li><h6><%= message %></h6></li>
                <% end %>
              </ul>
            </div>
          </div>
          <br>
        <% end %>

        <fieldset>

          <div class="form-group">
            <label class="col-lg-2 control-label">Descrição: </label>
            <div class="col-lg-8">
              <%= f.text_field :description, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-8 col-lg-offset-2">
              <%= f.submit t('buttons.save'), class: "btn btn-primary" %> |
              <%= link_to t('buttons.back'), team_path(@team), class: "btn btn-success" %>
            </div>
          </div>

        </fieldset>

      <% end %>
    </div>
  </div>
</div>

